
<%= current_user.email %>
<div id="show" class="containter" data-nav="sub-nav">
  
  <nav class="navbar navbar-default" id="sub_nav">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header header-title">
       <a href="" class="back-btn"><i class="fa fa-arrow-left fa-2x left" aria-hidden="true"></i></a><h2><%= @selected_name %></h2>
      </div>
    </div>
  </nav>


  <div class="row" id="main_content">
  <!-- ##### Navigation ##### -->

    <div class="col-lg-12" id="main_image_section">
      <!-- <img src="http://placekitten.com/270/270"> -->
      <h2><span class="label-cuisine label label-default"><%= @selected_restaurant.cuisine %></span></h2>
    
     <!--  <= image_tag(@main_photo_url,class: "main-image") %> -->
     <img class="main-image">
    
      <ul class="labels">
        <li class="label-dist sub-label label label-primary"><%= @selected_price %></li>
        <% @food_tags.each do |tag| %>
          <li class="label-price sub-label label label-primary"><%= tag[:name] %></li>
        <% end %>

        
      </ul>
      <p class="short-desc sub-label"><%= @selected_short_desc %></p>
    </div>
    <ul class="col-lg-12 sub-image">
      <% @selected_restaurant_food_list.each do |food|  %>      
        <!-- (":tag#{tag_count}: => #{tag.tag_name}") -->               
        <!-- :tag1 => tag_name, :tag2 => tag_name -->
      <!-- < image_tag(photo.photo_url,:data => {:name => photo.food_name, :photo_id => photo.id, :show_tag => false}) > -->

        <% if @selected_food_item_id.to_i == food[:id].to_i   %>

          <a href=""><li class="active"><%= image_tag(food[:url]) %></li></a>
          <% else %>
         
          <li><%= link_to image_tag(food[:url]), {controller: 'foods', action: 'show', food_id: food[:id]} %></li>
        <% end %>
      <% end %>
    </ul>

    <ul id="main_details">
      <li>Name: <%= @selected_restaurant.name %></li>
      <li>Address: <%= @selected_restaurant.address %></li>
      <li><%= @selected_restaurant.city %> <%= @selected_restaurant.state %> <%= @selected_restaurant.zip %></li>
      <li>Phone: <%= @selected_restaurant.phone %> </li>
    </ul>

  </div>
</div>

