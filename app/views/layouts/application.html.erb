    <div class="row">
      <div class="selector-icons">
        <a href="javascript:void(0)" class="col-lg-4"><i class="fa fa-heart fa-4x" aria-hidden="true"></i></a>
        <a href="javascript:void(0)" class="col-lg-4"><i class="fa fa-frown-o fa-4x" aria-hidden="true"></i></a>
        <a href="javascript:void(0)" class="col-lg-4"><i class="fa fa-times-circle fa-4x" aria-hidden="true"></i></a>
      </div>
    </div>
  </div>

</div> <!-- /. container -->
</body>
</html>
